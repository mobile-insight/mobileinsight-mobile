NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerToolbar:
            title: "MobileInsight"

        
        NavigationDrawerIconButton:
            icon: 'home'
            text: "Home Page"
            on_release:app.go_screen(0); app.root.ids.toolbar.title = self.text
        NavigationDrawerIconButton:
            icon: 'widgets'
            text: "Plugins"
            on_release: app.screens[1].manager=app.root.ids.scr_mngr;app.screens[1].popUpMenu(); 
        NavigationDrawerIconButton:
            icon: 'folder'
            text: "Log Viewer"
            on_release:app.go_screen(2); app.screens[2].onOpen(); app.root.ids.toolbar.title = self.text
        NavigationDrawerIconButton:
            icon: 'settings'
            text: "Settings"
            on_release: app.open_settings()
        NavigationDrawerIconButton:
            icon: 'information'
            text: "About MobileInsight"
            on_release: app.go_screen(3); app.root.ids.toolbar.title = self.text
